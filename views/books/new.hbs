<h1>Create a New Book</h1>

<div class="row">
    <form action="/books" method="POST" class="col-md-6 col-md-offset-3">
        <div class="form-group">
            <label for="first_name">Author's first Name:</label>
            <input type="text" name="first_name" class="form-control">
        </div>
        <div class="form-group">
            <label for="last_name">Author's last Name:</label>
            <input type="text" name="last_name" class="form-control">
        </div>
        <div class="form-group">
            <label for="category">Categroy:</label>
            <input type="text" name="category" class="form-control">
        </div>
        <div class="form-group">
            <label for="book_title">Book Title:</label>
            <input type="text" name="book_title" class="form-control">
        </div>
        <div>
            <input type="submit" value="Submit" class="btn btn-primary">
        </div>
    </form>
</div>

<a href="/books" class="btn btn-default">Main Page</a>
