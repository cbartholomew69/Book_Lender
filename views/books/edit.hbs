<h1>Edit {{book.book_title}}</h1>

<div class="row">
    <form action="/books/{{book.id}}?_method=PATCH" method="POST" class="col-md-6 col-md-offset-3">
        <div class="form-group">
            <label for="first_name">Author's first Name:</label>
            <input type="text" name="first_name" value="{{book.first_name}}" class="form-control">
        </div>
        <div class="form-group">
            <label for="last_name">Author's last Name:</label>
            <input type="text" name="last_name" value="{{book.last_name}}" class="form-control">
        </div>
        <div class="form-group">
            <label for="category">Category:</label>
            <input type="text" name="category" value="{{book.category}}" class="form-control">
        </div>
        <div class="form-group">
            <label for="book_title">Book Title:</label>
            <input type="text" name="book_title" value="{{book.book_title}}" class="form-control">
        </div>
        <div class="form-group">
            <label for="is_borrowed">Is Borrowed:</label>
            <input type="text" name="is_borrowed" value="{{book.is_borrowed}}" class="form-control">
        </div>
        <div>
            <input type="submit" value="Submit" class="btn btn-primary">
        </div>
    </form>
</div>

<div>
    <a href="/books/{{book.id}}" class="btn btn-default">Back</a>
    <a href="/books" class="btn btn-default">Main Page</a>
</div>
